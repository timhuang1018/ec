<% if has_cart? %>
<h1>購物車</h1>

<%= link_to '清空購物車', cart_path, method: :delete %>
<table class="table">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>數量</td>
      <td>單價</td>
      <td>小計</td>
    </tr>
  </thead>  

  <tbody>
    <% current_cart.items.each do |item| %>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.product.price %></td>
      <td><%= item.price %></td>
    </tr>
    <% end %>
  </tbody>
  <br>
  <tfoot>
    <tr>
      <td colspan="3">總計</td>
      <td><%= current_cart.total_price %></td>
    </tr>
  </tfoot>

</table>

<%= link_to '結帳', save_and_destroy_path, :method => :post %>

<% end %>
