<%= form_for @product, :url => products_path do |f| %>
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>
	<%= f.label :description, "Description" %>
	<%= f.text_area :description %>
	<%= f.label :price, "Price" %>
	<%= f.text_field :price %>

	<%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] } %>

	<%= f.submit "Create" %>
<% end %>