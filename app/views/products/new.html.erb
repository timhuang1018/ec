<%= form_for @product, :url => products_path do |f| %>
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>
	<%= f.label :description, "Description" %>
	<%= f.text_area :description %>
	<%= f.label :price, "Price" %>
	<%= f.text_field :price %>

<%= f.collection_select(:category_id, Category.all, :id, :name) %>

	<%= f.submit "Create" %>
<% end %>